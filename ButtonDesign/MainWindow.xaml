<Window x:Class="ButtonDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="#FF1A1A1D">
    <Window.Resources>
        <ResourceDictionary Source="ButtonTemplates.xaml"/>
    </Window.Resources>
    <Grid>
        <local:NavigateButton x:Name="navigateButton"
                              Style="{DynamicResource ResourceKey=ExportTXTButtonTemplate}"
                              Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                              Click="NavigateButton_Click"
                              MouseDown="navigateButton_MouseDown"
                              RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
