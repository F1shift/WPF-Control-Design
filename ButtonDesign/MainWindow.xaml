<Window x:Class="ButtonDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary Source="NavigateButtonTemplates.xaml"/>
    </Window.Resources>
    <Grid>
        <local:NavigateButton OuterStrokeThickness="30" InnerStrokeThickness="30" Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}" BorderBrush="#FF686868" Background="#02000000" Click="NavigateButton_Click"/>
    </Grid>
</Window>
